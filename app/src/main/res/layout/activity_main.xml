<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FF5252">
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_0"
            app:layout_constraintEnd_toStartOf="@+id/cell_1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/cell_3" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_1" app:layout_constraintStart_toEndOf="@+id/cell_0"
            app:layout_constraintTop_toTopOf="@+id/cell_0"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cell_2"
            android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_2" app:layout_constraintStart_toEndOf="@+id/cell_1"
            app:layout_constraintTop_toTopOf="@+id/cell_1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_3"
            app:layout_constraintTop_toBottomOf="@+id/cell_0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cell_4"
            app:layout_constraintBottom_toTopOf="@+id/cell_6" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_4"
            app:layout_constraintTop_toTopOf="@+id/cell_3" app:layout_constraintStart_toEndOf="@+id/cell_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cell_5" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_5"
            app:layout_constraintTop_toTopOf="@+id/cell_4" app:layout_constraintStart_toEndOf="@+id/cell_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_6"
            app:layout_constraintTop_toBottomOf="@+id/cell_3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cell_7"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_7" app:layout_constraintStart_toEndOf="@+id/cell_6"
            app:layout_constraintTop_toTopOf="@+id/cell_6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cell_8" android:onClick="button_pressed"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_8" app:layout_constraintStart_toEndOf="@+id/cell_7"
            app:layout_constraintTop_toTopOf="@+id/cell_7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="button_pressed"/>
    <TextView
            android:text="jugador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="jugador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="Empates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/cell_0"/>
    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score1"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="@+id/textView"/>
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score2"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="@+id/textView3"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp" android:layout_marginTop="36dp"
            android:onClick="reset"/>
</android.support.constraint.ConstraintLayout>